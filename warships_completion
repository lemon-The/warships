# Generates completions for the options and subcommands of the `battle` subcommand.
function _picocli_warships_add_battle() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts=""
  local arg_opts="-n --name -d --date"

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    -n|--name)
      return
      ;;
    -d|--date)
      return
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `member` subcommand.
function _picocli_warships_add_member() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts=""
  local arg_opts="-n --name -c --country -h --class -o --commision -e --decommision -b --battle -r --result"
  local shipCountry_option_args="USSR USA Germany Japan Britain" # --country values
  local shipClass_option_args="BATTLESHIP AIRCRAFT_CARRIER CRUISER DESTROYER SUBMARINE TRADE_SHIP" # --class values
  local battleResult_option_args="SUNK DAMAGED SURVIVED" # --result values

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    -n|--name)
      return
      ;;
    -c|--country)
      COMPREPLY=( $( compgen -W "${shipCountry_option_args}" -- "${curr_word}" ) )
      return $?
      ;;
    -h|--class)
      COMPREPLY=( $( compgen -W "${shipClass_option_args}" -- "${curr_word}" ) )
      return $?
      ;;
    -o|--commision)
      return
      ;;
    -e|--decommision)
      return
      ;;
    -b|--battle)
      return
      ;;
    -r|--result)
      COMPREPLY=( $( compgen -W "${battleResult_option_args}" -- "${curr_word}" ) )
      return $?
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

